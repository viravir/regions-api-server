{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ]
}